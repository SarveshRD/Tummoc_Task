    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/back3"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="15dp">

            <ImageView
                android:id="@+id/wappImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/wapp" />

            <TextView
                android:id="@+id/tv_all_restaurants"
                style="@style/home_horizontal_rv_header_title_style"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/all_restaurants"
                app:layout_constraintStart_toEndOf="@+id/wappImage"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/back3"
            android:layout_margin="15dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp">

            <ImageView
                android:id="@+id/faqImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/faq" />

            <TextView
                android:id="@+id/tv_all_faq"
                style="@style/home_horizontal_rv_header_title_style"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/faq"
                app:layout_constraintStart_toEndOf="@+id/faqImage"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

